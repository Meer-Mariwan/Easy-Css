{
  "Box-Sizing, Margin And Padding":{
    "description": "Set box-sizing To border-box And Remove Margin And Padding",
    "prefix": "!bmp",
    "body":[
      "box-sizing: ${1:border-box};",
      "margin: ${2:0};",
      "padding: ${3:0};"
    ]
  },
  "Margin And Padding":{
    "description": "Margin And Padding Properties",
    "prefix": "!mp",
    "body":[
      "margin: ${1:100px} ${2:100px} ${3:100px} ${4:100px};",
      "padding: ${5:100px} ${6:100px} ${7:100px} ${8:100px};"
    ]
  },
  "Margin":{
    "description": "Margin Property",
    "prefix": "!margin",
    "body":[
      "margin: ${1:100px} ${2:100px} ${3:100px} ${4:100px};"
    ]
  },
  "Padding":{
    "description": "Padding Property",
    "prefix": "!padding",
    "body":[
      "padding: ${1:100px} ${2:100px} ${3:100px} ${4:100px};"
    ]
  },
  "All Margins":{
    "description": "Margin Top, Bottom, Right, Left Properties",
    "prefix": "!am",
    "body":[
      "margin-top: ${1:100px};",
      "margin-bottom: ${2:100px};",
      "margin-right: ${3:100px};",
      "margin-left: ${4:100px};" 
    ]
  },
  "All Paddings":{
    "description": "Padding Top, Bottom, Right, Left Properties",
    "prefix": "!ap",
    "body":[
      "padding-top: ${1:100px};",
      "padding-bottom: ${2:100px};",
      "padding-right: ${3:100px};",
      "padding-left: ${4:100px};" 
    ]
  },
  "All Margins And Paddings":{
    "description": "Margin Top, Bottom, Right, Left, Padding Top, Bottom, Right, Left Properties",
    "prefix": "!amp",
    "body":[
      "margin-top: ${1:100px};",
      "margin-bottom: ${2:100px};",
      "margin-right: ${3:100px};",
      "margin-left: ${4:100px};", 
      "padding-top: ${5:100px};",
      "padding-bottom: ${6:100px};",
      "padding-right: ${7:100px};",
      "padding-left: ${8:100px};" 
    ]
  },
  "Margin Auto":{
    "description": "Set Margin Right And Left To Auto",
    "prefix": "!ma",
    "body":[
      "margin-right: ${1:auto};",
      "margin-left: ${2:auto};" 
    ]
  }
}