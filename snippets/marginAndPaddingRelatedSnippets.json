{
  "Box-Sizing, Margin And Padding":{
    "description": "Set box-sizing To border-box And Remove Margin And Padding",
    "prefix": "!bmp",
    "body":[
      "box-sizing: ${1:border-box};",
      "margin: ${2:0};",
      "padding: ${3:0};"
    ]
  },
  "Margin And Padding":{
    "description": "Margin And Padding Properties",
    "prefix": "!mp",
    "body":[
      "margin: ${1:100px} ${2:100px} ${3:100px} ${4:100px};",
      "padding: ${5:100px} ${6:100px} ${7:100px} ${8:100px};"
    ]
  }
}